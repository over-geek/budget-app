<section>
  <% if current_user %>
		<%= render 'layouts/expenses_header' %>
  <% end %>
  <div class="d-flex gap-2 justify-content-between align-items-center border border-secondary-subtle   p-2 mt-2 mx-2 bg-white">
		<div>
			<%= image_tag "#{@group.icon}", :class => 'img-fluid img-thumbnail w-25' %>
		</div>
		<div class="expense-group d-flex gap-2">
			<p> <%="#{@group.name}: "%> </p>
			<p style="font-weight:bold"><%= "$#{ @group.expenses.sum(:amount) }" %></p>
    </div>
  </div>

	<div id="expenses" class="px-2 bg-white">
    <% @expenses.each do |expense| %>
      <%= render expense %>
    <% end %>
  </div>
	<div class="d-flex flex-column fixed-bottom align-items-center justify-content-center text-center w-100 p-3" style="background-color: #5fb523;">
		<%= link_to 'Add a new expense', new_group_expense_path(@group), class: "text-white w-100  nav-link border border-white  p-2"  %>
	</div>
</section>