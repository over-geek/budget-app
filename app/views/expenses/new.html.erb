<div>
  <%= link_to group_expenses_path(@group), :class => "return-icon" do %>
  <% end %>
</div>
<%= form_with model: @expense, url: group_expenses_path(@group) do |form| %>
	<header class="bg-primary text-white p-2">
    <nav class="d-flex justify-content-between align-items-center text-center">
			<%= link_to group_expenses_path do %>
				<i class="fas fa-arrow-left fs-1 text-white"></i>
			<span class="sr-only"></span>
			<% end %>
			<h2 class="m-0 p-0">New expense</h2>
			<%= form.submit "Save", class: "nav-link fs-2" %>
    </nav>
  </header>
  <div class=m-3>
    <div class="mb-3">
      <%= form.label :name, style: "display: block", class:"form-label"%>
      <%= form.text_field :name, :required => true, :maxlength => "12",type:"text",class:"form-control",id:"formGroupExampleInput",placeholder:"Expense name"%>
    </div>
    <div class="mb-3">
      <%= form.label :amount, style: "display: block", class:"form-label" %>
      <%= form.number_field :amount, :required => true, :maxlength => "12",type:"text",class:"form-control",id:"formGroupExampleInput",placeholder:"Amount"%>
    </div>
		<div class="mb-3">
			<%= form.label 'Select a Category', class: 'fs-5 mb-2' %>
				<%= form.select :icon, options_for_select([
					['Education','education.png'],
					['Entertainment','entertainment.png'],
					['Food', 'food.png'],
					['Hospital','hospital.png'],
					['House','house.png'],
					['Personal Care','personal_care.png'],
					['Saving','saving.png'],
					['Transportation','travel.png'],
					['Utilities','utilities.png']
				]), {}, class:'form-select mb-4', id: 'icon', aria_label: "form-select category" %>
		</div>
  <div>

<% end %>